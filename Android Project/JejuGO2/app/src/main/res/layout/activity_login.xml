<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:background="@drawable/intro_bg_without_text"
    android:layout_height="match_parent"
    tools:context="codersit.co.kr.jejugo.activity.LoginActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:background="#1f000000"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="ID"
            android:textColor="#ffffff"
            android:textColorHint="#f2f2f2"
            android:ems="10"
            android:id="@+id/et_login_id" />

        <EditText
            android:layout_width="200dp"
            android:password="true"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:hint="PW"
            android:textColorHint="#f2f2f2"
            android:ems="10"
            android:id="@+id/et_login_pw" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="LOGIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:textColor="#cecece"
                android:layout_centerHorizontal="true"
                android:padding="6dp"
                android:id="@+id/tv_login_login"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:text="JOIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:textColor="#cecece"
                android:layout_centerHorizontal="true"
                android:padding="6dp"
                android:id="@+id/tv_login_join"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/jejugo_txt"
        android:layout_width="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />


</RelativeLayout>
