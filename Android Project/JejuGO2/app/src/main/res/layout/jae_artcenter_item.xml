<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:padding="6dp"
        android:background="#ffffff"
        android:id="@+id/ll_jae_artcenter_outlayout"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView_artcenter"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />

        <TextView
            android:id="@+id/text_artcenter_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="title"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_artcenter_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="3dp"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/ll_jae_artcenter_outlayout2"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView_artcenter2"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />

        <TextView
            android:textColor="#000000"
            android:id="@+id/text_artcenter_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_artcenter_start2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="content" />

    </LinearLayout>

</LinearLayout>