<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="450dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.80"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jejufest_dialog_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jejufest_dialog_Title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.09"
        android:orientation="vertical"
        android:padding="15dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/jejufest_dialog_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.46"
            android:text="intro" />

        <TextView
            android:id="@+id/jejufest_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="host" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="15dp">

            <Button
                android:id="@+id/artcenter_okButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
